<Window x:Class="ProjektOOP.ChassisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektOOP.ObservableCollections"
        mc:Ignorable="d"
        Title="Chassis"
        MinHeight="450"
        MaxHeight="600"
        MinWidth="150"
        MaxWidth="350"
        Height="450"
        Width="350">
    <Window.DataContext>
        <local:ListOfChassis/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <!-- Row 1 - Chassis List -->
        <ListView Grid.Column="1" Grid.Row="1" Height="auto" ItemsSource="{Binding ChassisList}">
            <ListView.View>
                <GridView ColumnHeaderToolTip="Chassis list">
                    <GridView.Columns>
                        <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Doors" Width="100" DisplayMemberBinding="{Binding Doors}"/>
                        <GridViewColumn Header="Weight" Width="100" DisplayMemberBinding="{Binding Weight}"/>
                        <GridViewColumn Header="Length" Width="100" DisplayMemberBinding="{Binding Lenght}"/>
                        <GridViewColumn Header="Width" Width="100" DisplayMemberBinding="{Binding Width}"/>
                        <GridViewColumn Header="Height" Width="100" DisplayMemberBinding="{Binding Height}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView> 

        <!-- Row 2 - Edit List buttons-->
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" MaxWidth="100" MinWidth="90" Margin="5">Load Chassis</Button>
            <Button Grid.Row="1" MaxWidth="100" MinWidth="90" Margin="5">Update Chassis</Button>
            <Button Grid.Row="2" MaxWidth="100" MinWidth="90" Margin="5">Delete Chassis</Button>


        </Grid>
    </Grid>
</Window>
